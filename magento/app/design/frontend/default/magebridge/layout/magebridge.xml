<layout version="0.1.0">
    <!--
    Ensure content block exists for MageBridge bridge requests.
    This layout file is loaded by MageBridge when magebridge.php processes requests.
    The content block must exist for the MageBridge Block model to retrieve page content.
    -->
    <default>
        <!-- Create the content block as a text_list container if it doesn't already exist -->
        <block type="core/text_list" name="content" as="content" />
    </default>
</layout>
